    "ReadingSection": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "reading"
        },
        "readingType": {
          "$ref": "#/definitions/ReadingType"
        },
        "occasion": {
          "$ref": "#/definitions/Occasion"
        }
      },
      "additionalProperties": false,
      "required": [
        "readingType",
        "type"
      ]
    },
    "ReadingType": {
      "enum": [
        "acts-of-the-apostles",
        "catholic-epistle",
        "liturgy-gospel",
        "liturgy-psalm",
        "matins-gospel",
        "matins-psalm",
        "pauline-epistle",
        "synaxarium",
        "vespers-gospel",
        "vespers-psalm"
      ],
      "type": "string"
    },
