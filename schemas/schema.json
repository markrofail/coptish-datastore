        },
        "arabic": {
          "type": "string"
        },
        "coptic": {
          "type": "string"
        },
        "coptic_english": {
          "type": "string"
        },
        "coptic_arabic": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "english"
      ]
    },
    "Occasion": {
      "enum": [
        "annual",
        "great-lent"
      ],
      "type": "string"
    },
    "InfoSection": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "info"
        },
        "text": {
          "$ref": "#/definitions/MultiLingualText"
        },
        "occasion": {
          "$ref": "#/definitions/Occasion"
        }
      },
      "additionalProperties": false,
      "required": [
        "text",
        "type"
      ]
    },
    "VersesSection": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "verses"
