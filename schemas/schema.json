        "commemorations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "$ref": "#/definitions/MultiLingualText"
              },
              "text": {
                "$ref": "#/definitions/MultiLingualText"
              }
            },
            "additionalProperties": false,
            "required": [
              "text",
              "title"
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [
